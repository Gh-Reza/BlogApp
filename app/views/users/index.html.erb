<section class="users">
  <ul class="user-list">
    <% @users.each do |user| %>
      <%= link_to user_path(user) do %>
      <li class="user-item">
        <div class="image-box"><img src="<%= user.photo %>" alt="user photo"></div>
        <div class="user-info-box">
          <h1 class="user-name"><%= user.name %></h1>
          <h4 class="posts-count">Number of posts: <%= user.posts.count %></h4>
        </div>

      </li>
      <% end %>
    <% end %>
  </ul>
</section>
